@using Resources.Views
@using SAM.Web.Shop.Models
@model JointModel[]

<h3>@Html.Raw(WeldingJointsStrings.Header)</h3>

    <div >
        <div class="table-responsive">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>@Html.Raw(WeldingJointsStrings.Label)</th>
                        <th>@Html.Raw(WeldingJointsStrings.Type)</th>
                        <th>@Html.Raw(WeldingJointsStrings.Location)</th>
                        <th>@Html.Raw(WeldingJointsStrings.Diameter)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (JointModel joint in Model)
                    {
                        <tr>
                            <td>@joint.Label</td>
                            <td>@joint.TypeName</td>
                            <td>@joint.Location</td>
                            <td>@joint.Diameter</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>   
    </div>

